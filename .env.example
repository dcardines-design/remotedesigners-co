# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OpenRouter API Key
# Get this from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key

# App URL (for OpenRouter referrer header)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AWS SES (for email newsletters)
# Get these from: AWS IAM Console → Create user with SES permissions
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
SES_FROM_EMAIL=hello@remotedesigners.co

# Cron Secret (for securing cron endpoints)
# Generate a random string
CRON_SECRET=your-random-secret

# Twitter API (for auto-posting jobs)
# Get these from: https://developer.twitter.com/en/portal/dashboard
# Create an app → Keys and tokens → Generate all 4 tokens
TWITTER_API_KEY=your-api-key
TWITTER_API_SECRET=your-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret

# Lemon Squeezy (for job posting payments)
# Get these from: https://app.lemonsqueezy.com/settings/api
LEMONSQUEEZY_API_KEY=your-api-key
LEMONSQUEEZY_STORE_ID=your-store-id
LEMONSQUEEZY_WEBHOOK_SECRET=your-webhook-secret

# Lemon Squeezy Variant IDs (create these in your LS dashboard)
# You only need the BASE variant - pricing is calculated dynamically
LEMONSQUEEZY_VARIANT_BASE=your-base-variant-id
